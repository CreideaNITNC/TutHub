<!doctype html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>TutHub</title>
</head>
<script>
  function copy(link) {
    navigator.permissions.query({name: "clipboard-write"}).then((result) => {
      if (result.state === "granted" || result.state === "prompt") {
        navigator.clipboard.writeText(link)
      }
    });
  }
  function remove(link) {
    fetch(link, {
      method: "DELETE",
    })
  }
</script>
<body>
<h1>TutHub</h1>
<form action="/repository" method="post">
  <h2>新規リポジトリ作成</h2>
  <input type="text" name="name" placeholder="リポジトリ名" required>
  <input type="submit" value="作成">
</form>
<h2>リポジトリ一覧</h2>
<ul>
  #for(repository in repositories):
  <li>
    <span>#(repository.name)</span>
    <span>#(repository.link)</span>
    <button type="button" onclick="copy('https://tuthub.top/tut#(repository.link)')">copy</button>
    <button type="button" onclick="remove('/repository#(repository.link)')">削除</button>
  </li>
  #endfor
</ul>
</body>
</html>
